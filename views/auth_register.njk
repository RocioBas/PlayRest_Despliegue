<!-- Vista de auth para registrarte y poder acceder a la parte de administrador !-->
{% extends "publico_base.njk" %}
{% block titulo %}Juegos | Registro{% endblock %}
{% block contenido %}
    <div class="d-flex justify-content-center">
        <h1>Registro</h1>
    </div>
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-md-12">
                <form action="/auth/register" method="post">
                    <div class="form-group">
                        <label for="login">Nombre:</label>
                        <input type="text" class="form-control" id="login" name="login" aria-describedby="emailHelp" placeholder="nombre"></div>
                        <div class="form-group">
                            <label for="password">Contraseña:</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="contraseña">
                                <button type="submit" class="btn btn-primary mt-4 mb-4">Submit</button>
                            </form>
                        </div>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger mt-5">{{ error }}</div>
                    {% endif %}
                </div>
            {% endblock %}